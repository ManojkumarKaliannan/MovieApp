<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movieBoxViewModel"
            type="com.backbase.assignment.ui.ui.dashboard.DashboardViewModel" />
        <import type="android.view.View" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAppGray"
            tools:context=".ui.ui.dashboard.popular.MostPopularFragment">
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/gl_center"
                app:layout_constraintGuide_percent="0.6"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="@string/title_popular"
                style="@style/TitleTextAppearance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/viewpager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/viewpager"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/gl_center"
                app:layout_constraintTop_toBottomOf="@+id/text_title"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TitleTextAppearance"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:id="@+id/title_text"
                android:text="@{movieBoxViewModel.title}"
                app:layout_constraintTop_toBottomOf="@+id/gl_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:id="@+id/status_image"
                android:elevation="10dp"
                app:customRateView="@{movieBoxViewModel.voteAverage}"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:layout_constraintTop_toBottomOf="@+id/title_text"
                app:layout_constraintStart_toStartOf="@+id/title_text"
                app:layout_constraintEnd_toEndOf="@+id/title_text"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ItemGrayTextAppearance"
                android:id="@+id/percentage_text"
                app:convertToPercentage="@{movieBoxViewModel.voteAverage}"
                android:layout_marginStart="3dp"
                android:textColor="@color/colorGray"
                app:layout_constraintTop_toTopOf="@+id/status_image"
                app:layout_constraintLeft_toRightOf="@+id/status_image"
                app:layout_constraintBottom_toBottomOf="@+id/status_image"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description_text"
                android:textSize="15sp"
                android:maxLines="6"
                android:layout_margin="16dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorLiteWhite"
                android:text="@{movieBoxViewModel.overview}"
                app:layout_constraintTop_toBottomOf="@+id/status_image"
                app:layout_constraintBottom_toTopOf="@+id/more_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_more"
                android:id="@+id/more_text"
                android:textSize="14sp"
                android:onClick="@{(v)-> movieBoxViewModel.onClickAction(v)}"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/colorGreen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description_text"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="@{movieBoxViewModel.progressBarVisibility ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/progressbar"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>